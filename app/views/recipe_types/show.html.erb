<h1><%= @recipe_type.name%></h1>
<hr>
<% if @recipe_type.recipes.empty?%>
  Nenhuma receita encontrada para este tipo de receitas
<%end%>
<hr>
<% @recipe_type.recipes.each do |recipe|%>
  <h1><%= recipe.title %></h1>
  <ul>
    <li> <%= recipe.recipe_type.name%>
    <li> <%= recipe.cuisine.name %>
    <li> <%= recipe.difficulty %>
    <li> <%= recipe.cook_time%> minutos
  </ul>
<%end%>
<hr>
<%= link_to('Voltar', root_path)%>
